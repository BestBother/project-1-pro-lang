<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NIST Manufacturing Data</title>
</head>
<body>
    <h1>Device Data Output</h1>
    <ul>
        <% data.forEach(item => { %>
            <li><%= item %></li>
        <% }); %>
    </ul>
    <% if (typeof deviceStreams !== 'undefined') { %>
        <% deviceStreams.forEach(function(deviceStream) { %>
            <h2>Device: <%= deviceStream.$.name %>, UUID: <%= deviceStream.$.uuid %></h2>
            <% if (deviceStream.ComponentStream) { %>
                <% deviceStream.ComponentStream.forEach(function(component) { %>
                    <!-- Handle Events -->
                    <% if (component.Events) { %>
                        <h3>Events</h3>
                        <% Object.entries(component.Events).forEach(([key, event]) => { %>
                            <div>
                                <strong><%= key %>:</strong> <%= event._ %> (Timestamp: <%= event.$.timestamp %>)
                            </div>
                        <% }); %>
                    <% } %>
                    <!-- Handle Conditions -->
                    <% if (component.Condition) { %>
                        <h3>Conditions</h3>
                        <div>
                            <strong>Condition:</strong> <%= component.Condition._ %> (Severity: <%= component.Condition.$.severity %>)
                        </div>
                    <% } %>
                    <!-- Handle Samples -->
                    <% if (component.Samples) { %>
                        <h3>Samples</h3>
                        <% Object.entries(component.Samples).forEach(([key, sample]) => { %>
                            <div>
                                <strong><%= key %>:</strong> <%= sample._ %> (Value: <%= sample.$.value %>)
                            </div>
                        <% }); %>
                    <% } %>
                <% }); %>
            <% } %>
        <% }); %>
    <% } %>
</body>
</html>
